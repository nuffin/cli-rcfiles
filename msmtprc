defaults

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

logfile ~/.msmtp.log

account sample@gmail.com
	host imap.gmail.com
	port 465
	from sample@gmail.com
	user sample@gmail.com
	passwordeval "pass sample@gmail.com"
	auth login
	tls_starttls off
	tls_certcheck off

account sample@outlook.com
	host smtp-mail.outlook.com
	port 587
	from sample@outlook.com
	user sample@outlook.com
	passwordeval "pass sample@outlook.com"
	auth login
	tls_starttls off
	tls_certcheck on

account sample@163.com
	host smtp.163.com
	port 465
	from sample@163.com
	user sample@163.com
	passwordeval "pass sample@163.com"
	auth login
	tls_starttls off
	tls_certcheck off

account default : sample@163.com
